@model DepiProject.ViewModels.ShoppingCartVM
@{
    ViewData["Title"] = "My Shopping Cart";
    Layout = "_CustomerLayout";
}

<div class="container-fluid">
    <!-- Notice -->
    <div class="alert alert-info mb-4">
        <i class="fas fa-info-circle me-2"></i> This page displays dynamic user information but static cart data. Only your personal information is retrieved from the database.
    </div>

    <div class="row mb-4">
        <div class="col-12">
            <h1 class="h3 text-gray-800">My Shopping Cart</h1>
            <p>Welcome, <strong>@ViewBag.UserName</strong> (@ViewBag.Email)</p>
        </div>
    </div>

    <div class="row">
        <!-- Shopping Cart Items -->
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Cart Items (Static Data)</h6>
                </div>
                <div class="card-body">
                    @if (Model?.ShoppingCart != null && Model.ShoppingCart.Any())
                    {
                        @foreach (var item in Model.ShoppingCart)
                        {
                            <div class="d-flex justify-content-between align-items-center mb-4 pb-3 border-bottom">
                                <div class="d-flex align-items-center">
                                    <img src="@item.Image" alt="@item.Name" style="width: 80px; height: 80px; object-fit: contain;" class="me-3">
                                    <div>
                                        <h5 class="mb-1">@item.Name</h5>
                                        <p class="text-muted small mb-1">@item.Description</p>
                                        <p class="text-primary mb-0">$@item.Price.ToString("0.00")</p>
                                    </div>
                                </div>
                                <div class="d-flex align-items-center">
                                    <div class="input-group me-3" style="width: 120px;">
                                        <button class="btn btn-outline-secondary qty-btn" data-action="decrease" data-id="@item.Id">
                                            <i class="fas fa-minus"></i>
                                        </button>
                                        <input type="text" class="form-control text-center qty-input" value="@item.Count" readonly>
                                        <button class="btn btn-outline-secondary qty-btn" data-action="increase" data-id="@item.Id">
                                            <i class="fas fa-plus"></i>
                                        </button>
                                    </div>
                                    <button class="btn btn-sm btn-danger remove-item-btn" data-id="@item.Id">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </div>
                        }
                        <div class="text-end mt-3">
                            <a href="/Home/Shop" class="btn btn-outline-primary">
                                <i class="fas fa-shopping-bag me-2"></i>Continue Shopping
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-shopping-cart fa-3x text-muted mb-3"></i>
                            <h3>Your cart is empty</h3>
                            <p class="text-muted">Add some items to your cart to continue shopping</p>
                            <a href="/Home/Shop" class="btn btn-primary mt-3">
                                <i class="fas fa-arrow-left me-2"></i>Start Shopping
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Cart Summary -->
        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Order Summary</h6>
                </div>
                <div class="card-body">
                    @if (Model?.ShoppingCart != null && Model.ShoppingCart.Any())
                    {
                        <div class="d-flex justify-content-between mb-2">
                            <span>Subtotal:</span>
                            <span>$@Model.TotalPrice.ToString("0.00")</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Shipping:</span>
                            <span>Free</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Tax (8%):</span>
                            @{
                                var tax = Model.TotalPrice * 0.08;
                                var total = Model.TotalPrice + tax;
                            }
                            <span>$@tax.ToString("0.00")</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-3">
                            <span class="fw-bold">Total:</span>
                            <span class="fw-bold text-success">$@total.ToString("0.00")</span>
                        </div>
                        
                        <div class="mb-3">
                            <label for="promoCode" class="form-label">Promo Code</label>
                            <div class="input-group">
                                <input type="text" class="form-control" id="promoCode" placeholder="Enter promo code">
                                <button class="btn btn-outline-secondary" type="button" id="applyPromo">Apply</button>
                            </div>
                        </div>
                        
                        <button class="btn btn-success w-100" id="checkoutBtn">
                            <i class="fas fa-credit-card me-2"></i>Proceed to Checkout
                        </button>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <p class="text-muted">No items in your cart</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Quantity buttons
            $('.qty-btn').on('click', function() {
                var action = $(this).data('action');
                var itemId = $(this).data('id');
                var inputField = $(this).closest('.input-group').find('.qty-input');
                var currentQty = parseInt(inputField.val());
                
                if (action === 'increase') {
                    // In a real app, we'd make an API call to update the quantity in the database
                    inputField.val(currentQty + 1);
                    alert('This is static data. In a real application, this would increase the quantity in your cart.');
                } else if (action === 'decrease' && currentQty > 1) {
                    // In a real app, we'd make an API call to update the quantity in the database
                    inputField.val(currentQty - 1);
                    alert('This is static data. In a real application, this would decrease the quantity in your cart.');
                }
            });
            
            // Remove item button
            $('.remove-item-btn').on('click', function() {
                var itemId = $(this).data('id');
                // In a real app, we'd make an API call to remove the item from the database
                alert('This is static data. In a real application, this would remove the item from your cart.');
                $(this).closest('.d-flex.justify-content-between').fadeOut();
            });
            
            // Apply promo code button
            $('#applyPromo').on('click', function() {
                var promoCode = $('#promoCode').val();
                if (promoCode) {
                    alert('This is static data. In a real application, this would apply the promo code: ' + promoCode);
                } else {
                    alert('Please enter a promo code.');
                }
            });
            
            // Checkout button
            $('#checkoutBtn').on('click', function() {
                alert('This is static data. In a real application, this would proceed to the checkout page.');
            });
        });
    </script>
}
