@* @model ShoppingCartVM

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet" />
<link rel="stylesheet" href="~/css/ShoppingCart.css" />
<style>
    .cart-item {
        border-bottom: 1px solid #e0e0e0;
        padding-bottom: 20px;
        margin-bottom: 20px;
        transition: background-color 0.3s ease;
    }

    .cart-item:hover {
        background-color: #f8f9fa;
    }

    .product-img {
        max-width: 100px;
        object-fit: cover;
        border-radius: 8px;
    }

    .cart-summary {
        border: 1px solid #e0e0e0;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.05);
    }

    .cart-summary .total-price {
        font-size: 1.5rem;
        font-weight: bold;
    }

    .btn-checkout {
        background-color: #0d6efd;
        color: white;
    }

    .btn-checkout:hover {
        background-color: #0b5ed7;
    }

    .empty-cart {
        min-height: 300px;
    }
</style>
<div class="container py-5">
    <div class="row">
        <!-- Shopping Cart Items -->
        <div class="col-lg-8">
            <h3 class="mb-4">
                <i class="fas fa-shopping-cart me-2"></i> Your Shopping Cart
            </h3>

            @foreach (var item in Model.ShoppingCart)
            {
                <div class="cart-item d-flex justify-content-between align-items-center mb-3">
                    <div class="d-flex">
                        <img src="@item.Image" alt="@item.Name" class="product-img me-3" />
                        <div>
                            <h5>@item.Name</h5>
                            <p class="text-muted small mb-1">@item.Description</p>
                            <div class="d-flex align-items-center mt-2">
                                <button type="button" class="btn btn-sm btn-outline-secondary me-2">
                                    <i class="fas fa-minus"></i>
                                </button>

                                <input type="text" value="@item.Count" class="form-control form-control-sm text-center me-2"
                                    style="width: 50px;" readonly />

                                <button type="button" class="btn btn-sm btn-outline-secondary">
                                    <i class="fas fa-plus"></i>
                                </button>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex flex-column align-items-end">
                        <span class="fw-bold">@((item.Price * item.Count).ToString("C"))</span>
                        <button type="button" class="btn btn-sm btn-danger mt-2">
                            <i class="fas fa-trash-alt"></i> Remove
                        </button>
                    </div>
                </div>
            }
        </div>

        <!-- Cart Summary -->
        <div class="col-lg-4 mt-4 mt-lg-0">
            <div class="cart-summary">
                <h4 class="mb-4">Cart Summary</h4>
                <ul class="list-unstyled mb-4">
                    <li class="d-flex justify-content-between mb-2">
                        <span>Subtotal:</span>
                        <span>@Model.TotalPrice.ToString("C")</span>
                    </li>
                    <li class="d-flex justify-content-between mb-2">
                        <span>Shipping:</span>
                        <span>Free</span>
                    </li>
                    <li class="d-flex justify-content-between border-top pt-3">
                        <span class="total-price">Total:</span>
                        <span class="total-price text-primary">@Model.TotalPrice.ToString("C")</span>
                    </li>
                </ul>

                <form asp-controller="Cart" asp-action="Checkout" method="post">
                    <button type="submit" class="btn btn-checkout w-100 py-2">
                        <i class="fas fa-credit-card me-2"></i> Proceed to Checkout
                    </button>
                </form>
            </div>
        </div>
    </div>
</div> *@