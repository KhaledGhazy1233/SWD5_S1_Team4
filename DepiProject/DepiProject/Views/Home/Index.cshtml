</head>

<body>
    <!-- Start Top Nav -->

    <!-- Close Top Nav -->
    <!-- Header -->

    <!-- Close Header -->
    <!-- Modal -->
    <div class="modal fade bg-white" id="templatemo_search" tabindex="-1" role="dialog"
        aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="w-100 pt-1 mb-5 text-right">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="" method="get" class="modal-content modal-body border-0 p-0">
                <div class="input-group mb-2">
                    <input type="text" class="form-control" id="inputModalSearch" name="q" placeholder="Search ...">
                    <button type="submit" class="input-group-text bg-success text-light">
                        <i class="fa fa-fw fa-search text-white"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>



    <!-- Start Banner Hero -->
    <div id="template-mo-zay-hero-carousel" class="carousel slide" data-bs-ride="carousel">
        <ol class="carousel-indicators">
            <li data-bs-target="#template-mo-zay-hero-carousel" data-bs-slide-to="0" class="active"></li>
            <li data-bs-target="#template-mo-zay-hero-carousel" data-bs-slide-to="1"></li>
            <li data-bs-target="#template-mo-zay-hero-carousel" data-bs-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <div class="container">
                    <div class="row p-5">
                        <div class="mx-auto col-md-8 col-lg-6 order-lg-last">
                            <img class="img-fluid" style="height: 350px; object-fit: contain;"
                                src="https://tse4.mm.bing.net/th/id/OIP.okPHK-lOk_E5nzOZsGx2dwHaFI?cb=iwc2&rs=1&pid=ImgDetMain"
                                alt="TechXpress Electronics">
                        </div>
                        <div class="col-lg-6 mb-0 d-flex align-items-center">
                            <div class="text-align-left align-self-center">
                                <h1 class="h1 text-success"><b>TechXpress</b> Electronics</h1>
                                <h3 class="h2">Your Premium Electronics Store</h3>
                                <p>
                                    TechXpress offers the latest and greatest in technology, from powerful laptops to
                                    cutting-edge smartphones and professional cameras.
                                    Visit our store today to experience innovation firsthand with our extensive range of
                                    high-quality electronic products.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <div class="container">
                    <div class="row p-5">
                        <div class="mx-auto col-md-8 col-lg-6 order-lg-last">
                            <img class="img-fluid" style="height: 350px; object-fit: contain;"
                                src="https://tse4.mm.bing.net/th/id/OIP.okPHK-lOk_E5nzOZsGx2dwHaFI?cb=iwc2&rs=1&pid=ImgDetMain"
                                alt="Latest Laptops">
                        </div>
                        <div class="col-lg-6 mb-0 d-flex align-items-center">
                            <div class="text-align-left">
                                <h1 class="h1">Powerful Laptops</h1>
                                <h3 class="h2">Performance and Portability Combined</h3>
                                <p>
                                    Discover our extensive range of laptops, from sleek ultrabooks to powerful gaming
                                    machines.
                                    Find the perfect balance of performance, battery life, and features for your needs.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <div class="container">
                    <div class="row p-5">
                        <div class="mx-auto col-md-8 col-lg-6 order-lg-last">
                            <img class="img-fluid" style="height: 350px; object-fit: contain;"
                                src="https://purepng.com/public/uploads/large/purepng.com-mobile-phone-with-touchmobilemobile-phonehandymobile-devicetouchscreenmobile-phone-device-231519333033crymn.png"
                                alt="Latest Smartphones">
                        </div>
                        <div class="col-lg-6 mb-0 d-flex align-items-center">
                            <div class="text-align-left">
                                <h1 class="h1">Cutting-edge Mobiles</h1>
                                <h3 class="h2">Stay Connected with the Latest Technology</h3>
                                <p>
                                    Browse our collection of the latest smartphones with advanced features,
                                    powerful processors, impressive cameras, and stunning displays from all major
                                    brands.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <div class="container">
                    <div class="row p-5">
                        <div class="mx-auto col-md-8 col-lg-6 order-lg-last">
                            <img class="img-fluid" style="height: 350px; object-fit: contain;"
                                src="https://tse3.mm.bing.net/th/id/OIP.Kuw2tT6BMjFfN3UpgO1j2QHaE8?cb=iwc2&rs=1&pid=ImgDetMain"
                                alt="Professional Cameras">
                        </div>
                        <div class="col-lg-6 mb-0 d-flex align-items-center">
                            <div class="text-align-left">
                                <h1 class="h1">Professional Cameras</h1>
                                <h3 class="h2">Capture Every Moment in Stunning Detail</h3>
                                <p>
                                    From entry-level DSLR cameras to professional mirrorless systems,
                                    find the perfect camera to capture your vision with exceptional clarity and detail.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev text-decoration-none w-auto ps-3" href="#template-mo-zay-hero-carousel"
            role="button" data-bs-slide="prev">
            <i class="fas fa-chevron-left"></i>
        </a>
        <a class="carousel-control-next text-decoration-none w-auto pe-3" href="#template-mo-zay-hero-carousel"
            role="button" data-bs-slide="next">
            <i class="fas fa-chevron-right"></i>
        </a>
    </div>
    <!-- End Banner Hero -->
    <!-- Start Categories of The Month -->
    <section class="container py-5">
        <div class="row text-center pt-3">
            <div class="col-lg-6 m-auto">
                <h1 class="h1">Featured Categories</h1>
                <p>
                    Explore our premium selection of electronic devices in our most popular categories.
                    From powerful laptops to latest smartphones and professional cameras.
                </p>
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-md-4 p-5 mt-3">
                <a href="/Home/shop?category=laptops"><img src="./assets/img/category_img_01.jpg"
                        class="rounded-circle img-fluid border"></a>
                <h5 class="text-center mt-3 mb-3">Laptops</h5>
                <p class="text-center"><a href="/Home/shop?category=laptops" class="btn btn-success">Browse Laptops</a>
                </p>
            </div>
            <div class="col-12 col-md-4 p-5 mt-3">
                <a href="/Home/shop?category=mobiles"><img src="./assets/img/category_img_02.jpg"
                        class="rounded-circle img-fluid border"></a>
                <h2 class="h5 text-center mt-3 mb-3">Mobiles</h2>
                <p class="text-center"><a href="/Home/shop?category=mobiles" class="btn btn-success">Browse Mobiles</a>
                </p>
            </div>
            <div class="col-12 col-md-4 p-5 mt-3">
                <a href="/Home/shop?category=cameras"><img src="./assets/img/category_img_03.jpg"
                        class="rounded-circle img-fluid border"></a>
                <h2 class="h5 text-center mt-3 mb-3">Cameras</h2>
                <p class="text-center"><a href="/Home/shop?category=cameras" class="btn btn-success">Browse Cameras</a>
                </p>
            </div>
        </div>
    </section>
    <!-- End Categories of The Month --> <!-- Start Featured Product -->
    <section class="bg-light">
        <div class="container py-5">
            <div class="row text-center py-3">
                <div class="col-lg-6 m-auto">
                    <h1 class="h1">Featured Products</h1>
                    <p>
                        Discover our handpicked selection of premium electronics, featuring the latest technology
                        and best-in-class performance for all your tech needs.
                    </p>
                </div>
            </div>
            <div class="row">
                @if (ViewBag.FeaturedProducts != null && ViewBag.FeaturedProducts.Count > 0)
                {
                    foreach (var product in ViewBag.FeaturedProducts)
                    {
                        <div class="col-12 col-md-4 mb-4">
                            <div class="card h-100">
                                <a asp-controller="Home" asp-action="shopsingle" asp-route-id="@product.Id">
                                    <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name">
                                </a>
                                <div class="card-body">
                                    <ul class="list-unstyled d-flex justify-content-between">
                                        <li>
                                            <i class="text-warning fa fa-star"></i>
                                            <i class="text-warning fa fa-star"></i>
                                            <i class="text-warning fa fa-star"></i>
                                            <i class="text-warning fa fa-star"></i>
                                            <i class="text-muted fa fa-star"></i>
                                        </li>
                                        @if (product.DiscountPercentage > 0)
                                        {
                                            decimal discountedPrice = product.Price * (1 - (product.DiscountPercentage / 100));
                                            <li>
                                                <span
                                                    class="text-muted text-decoration-line-through">$@product.Price.ToString("0.00")</span>
                                                <span class="text-danger"> $@discountedPrice.ToString("0.00")</span>
                                            </li>
                                        }
                                        else
                                        {
                                            <li class="text-muted text-right">$@product.Price.ToString("0.00")</li>
                                        }
                                    </ul>
                                    <a asp-controller="Home" asp-action="shopsingle" asp-route-id="@product.Id"
                                        class="h2 text-decoration-none text-dark">@product.Name</a>
                                    <p class="card-text">
                                        @product.Description
                                    </p>
                                    <div class="d-flex justify-content-between">
                                        <p class="text-muted">Brand: @product.Brand</p>
                                        @if (product.StockQuantity <= 5)
                                        {
                                            <p class="text-danger">Only @product.StockQuantity left!</p>
                                        }
                                    </div>
                                    <div class="d-grid gap-2">
                                        <a href="/Cart/AddToCart?productId=@product.Id" class="btn btn-success">Add to Cart</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12 text-center">
                        <p>No featured products available at the moment.</p>
                    </div>
                }
            </div>
        </div>
    </section>
    <!-- End Featured Product -->
    <!-- Start Footer -->

    <!-- End Footer -->
