@if (ViewBag.UserName != null)
{
    <!-- Start Personalized Welcome for logged-in users -->
    <div class="container py-4">
        <div class="role-card shadow-sm p-4">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h3>Welcome back, <span class="@(ViewBag.UserRole == "Admin" ? "admin-text-primary" : "customer-text-primary")">@ViewBag.UserName</span>!</h3>
                    <div class="mb-3">
                        <span class="badge @ViewBag.RoleBadgeClass">@ViewBag.UserRole</span>
                    </div>
                    @if (ViewBag.UserRole == "Admin")
                    {
                        <p>Manage your store's products, orders, and customer accounts from your Admin Dashboard.</p>
                        <a href="/Admin/Dashboard" class="btn admin-btn-primary mt-2">
                            <i class="fas fa-tachometer-alt me-2"></i>Admin Dashboard
                        </a>
                    }
                    else if (ViewBag.UserRole == "Customer") 
                    {
                        <p>You have <strong>@ViewBag.PendingOrdersCount</strong> pending orders. Your last order was on <strong>@ViewBag.LatestOrderDate</strong>.</p>
                        <div class="mt-3">
                            <a href="/Customer/Dashboard" class="btn customer-btn-primary me-2">
                                <i class="fas fa-user me-2"></i>My Dashboard
                            </a>
                            <a href="/Customer/Orders" class="btn btn-outline-success">
                                <i class="fas fa-box me-2"></i>My Orders
                            </a>
                        </div>
                    }
                </div>
                <div class="col-md-4 text-center text-md-end mt-3 mt-md-0">
                    <div class="display-4 @(ViewBag.UserRole == "Admin" ? "text-primary" : "text-success")">
                        <i class="@(ViewBag.UserRole == "Admin" ? "fas fa-user-shield" : "fas fa-user")"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Personalized Welcome -->
}<!-- Start Categories of The Month -->
<section class="container py-5">
    <div class="row text-center pt-3">
        <div class="col-lg-6 m-auto">
            <h1 class="h1">Featured Categories</h1>
            <p>
                Explore our premium selection of electronic devices in our most popular categories.
                From powerful laptops to latest smartphones and professional cameras.
            </p>
        </div>
    </div>
    <div class="row">
        @if(Model.Category.Count >0)
        {
            foreach (var category in Model.Category)
            {
                <div class="col-12 col-md-4 mb-5">
                    <div class="category-card shadow-sm h-100">
                        <div class="position-relative">
                            <a href="/Home/shop?category=laptops">
                                <img src=@category.ImageUrl
                                     class="category-img w-100">
                                <div class="position-absolute top-0 end-0 p-2">
                                    <span class="badge bg-success">@category.ProductCount Products</span>
                                </div>
                            </a>
                        </div>
                        <div class="p-4 text-center">
                            <h4 class="mb-3">@category.Name</h4>
                            <p class="text-muted mb-3">@category.Description</p>
                            <a href="/Home/shop?category=laptops" class="btn btn-outline-success rounded-pill px-4">
                                <i class="fas fa-laptop me-2"></i>Browse @category.Name
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        </div>
    </section>
    <!-- End Categories of The Month --><!-- Start Featured Product -->
    <section class="bg-light">
        <div class="container py-5">
            <div class="row text-center py-3">
                <div class="col-lg-6 m-auto">
                    <h1 class="h1">Featured Products</h1>
                    <p>
                        Discover our handpicked selection of premium electronics, featuring the latest technology
                        and best-in-class performance for all your tech needs.
                    </p>
                </div>
            </div>
            <div class="row">
                    @foreach (var product in Model.Products)
                    {                        <div class="col-12 col-md-4 mb-4">
                            <div class="product-card h-100">
                                @if (product.DiscountPercentage > 0)
                                {
                                    <div class="position-absolute top-0 left-0 p-3">
                                        <span class="badge bg-danger px-3 py-2 rounded-pill">
                                            <i class="fas fa-tag me-1"></i>@product.DiscountPercentage% OFF
                                        </span>
                                    </div>
                                }
                        <a asp-controller="Product" asp-action="Details" asp-route-id="@product.ProductId" class="position-relative">
                                    <img src="@product.Path" class="card-img-top" alt="@product.Name">
                                </a>
                                <div class="card-body d-flex flex-column">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <span class="product-brand">
                                            <i class="fas fa-tag me-1"></i>@product.Brand
                                        </span>
                                        <div class="ratings">
                                            <i class="text-warning fa fa-star"></i>
                                            <i class="text-warning fa fa-star"></i>
                                            <i class="text-warning fa fa-star"></i>
                                            <i class="text-warning fa fa-star"></i>
                                            <i class="text-muted fa fa-star"></i>
                                        </div>
                                    </div>
                                    <h5 class="card-title mb-3">
                                        <a asp-controller="Home" asp-action="shopsingle" asp-route-id="@product.Brand"
                                            class="text-decoration-none text-dark">@product.Name</a>
                                    </h5>
                                    <p class="card-text flex-grow-1 text-muted">
                                        @(product.Description.Length > 100 ? $"{product.Description.Substring(0, 100)}..." : product.Description)
                                    </p>
                                    <div class="d-flex justify-content-between align-items-center mt-3 mb-2">
                                        @if (product.DiscountPercentage > 0)
                                        {
                                            decimal discountedPrice = product.Price * (1 - (product.DiscountPercentage / 100));
                                            <div>
                                                <span class="product-price product-price-discount">$@discountedPrice.ToString("0.00")</span>
                                                <span class="text-muted text-decoration-line-through ms-2">$@product.Price.ToString("0.00")</span>
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="product-price">$@product.Price.ToString("0.00")</span>
                                        }
                                        
                                        @if (product.StockQuantity <= 5)
                                        {
                                            <span class="badge bg-warning text-dark rounded-pill">Only @product.StockQuantity left</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success rounded-pill">In Stock</span>
                                        }
                                    </div>
                                    <div class="d-flex mt-3">
                                        <a href="/Cart/AddToCart?productId=@product.ProductId" class="btn btn-success flex-grow-1">
                                            <i class="fas fa-shopping-cart me-2"></i>Add to Cart
                                        </a>
                                        <a href="#" class="btn btn-outline-secondary ms-2">
                                            <i class="far fa-heart"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>

                }
                else
                {
                    <div class="col-12 text-center">
                        <p>No featured products available at the moment.</p>
                    </div>
                }
            </div>
        </div>
    </section>    <!-- End Featured Product -->
