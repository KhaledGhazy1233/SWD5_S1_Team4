@{
    ViewData["Title"] = "Categories";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col d-flex justify-content-between align-items-center">
            <h1>Categories</h1>
            <a asp-action="Create" class="btn btn-primary">Add New Category</a>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>SubCategory</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        @foreach (var category in Model)
                        {
                            <tr>
                                <td>@category.Id</td>
                                <td>@category.Name</td>
                                <td>@category.SubCategory</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                                        <a asp-action="Details" asp-route-id="@category.Id" class="btn btn-sm btn-outline-info">Details</a>
                                        <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center">No categories found</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
