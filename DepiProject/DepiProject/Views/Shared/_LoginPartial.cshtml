@using Microsoft.AspNetCore.Identity
@using DataLayer.Entities
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="fa fa-user me-1"></i> Hello @UserManager.GetUserAsync(User).Result.UserName!
        </a>
        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
            <li><a class="dropdown-item" href="/Profile/Index"><i class="fa fa-id-card me-2"></i>Profile</a></li>
            <li><a class="dropdown-item" href="/Orders/History"><i class="fa fa-history me-2"></i>Orders</a></li>
            <li><hr class="dropdown-divider"></li>
            <li>
                <form class="form-inline" asp-area="" asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="dropdown-item btn-logout"><i class="fa fa-sign-out-alt me-2"></i>Logout</button>
                </form>
            </li>
        </ul>
    </li>
    <li class="nav-item">
        <form class="form-inline nav-link" asp-area="" asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="btn btn-link p-0 text-decoration-none" style="color: var(--bs-nav-link-color);"><i class="fa fa-sign-out-alt me-1"></i>Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link" asp-controller="Account" asp-action="Login"><i class="fa fa-sign-in-alt me-1"></i> Login</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-controller="Account" asp-action="Register"><i class="fa fa-user-plus me-1"></i> Register</a>
    </li>
}
</ul>
