@{
    ViewData["Title"] = "Forgot Password Confirmation";
}

<div class="container mt-5 pt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">Password Reset Email Sent</h4>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="bi bi-envelope-check" style="font-size: 3rem; color: #28a745;"></i>
                    </div>
                    <p>
                        Please check your email to reset your password.
                    </p>
                    <p>
                        If you don't receive an email within a few minutes, please check your spam folder or verify that you've entered the correct email address.
                    </p>
                    <div class="mt-4">
                        <a asp-action="Login" class="btn btn-primary">Return to Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
