@{
    ViewData["Title"] = "Email Confirmed";
}

<div class="container mt-5 pt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">Email Confirmed</h4>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="bi bi-check-circle" style="font-size: 3rem; color: #28a745;"></i>
                    </div>
                    <h5>Your email has been confirmed</h5>
                    <p class="mt-3">
                        Thank you for confirming your email address. Your account is now active.
                    </p>
                    <div class="mt-4">
                        <a asp-controller="Account" asp-action="Login" class="btn btn-primary">Log in now</a>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary ms-2">Return to Home</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
