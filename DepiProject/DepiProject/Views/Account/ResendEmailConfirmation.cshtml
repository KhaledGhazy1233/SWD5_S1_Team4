@model DepiProject.ViewModels.ResendEmailConfirmationViewModel
@{
    ViewData["Title"] = "Resend Email Confirmation";
}

<div class="container mt-5 pt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Resend Email Confirmation</h4>
                </div>
                <div class="card-body">
                    <form asp-controller="Account" asp-action="ResendEmailConfirmation" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        
                        <div class="mb-3">
                            <p>Enter your email to receive a new confirmation link.</p>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" autocomplete="email" aria-required="true" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Resend</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <div>
                        <a asp-controller="Account" asp-action="Login">Back to Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
