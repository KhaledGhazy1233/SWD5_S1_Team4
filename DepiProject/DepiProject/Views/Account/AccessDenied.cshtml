@{
    ViewData["Title"] = "Access Denied";
}

<div class="container mt-5 pt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Access Denied</h4>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="bi bi-shield-exclamation" style="font-size: 3rem; color: #dc3545;"></i>
                    </div>
                    <h5>You do not have permission to access this resource.</h5>
                    <p class="text-muted mt-3">
                        If you believe this is an error, please contact the site administrator.
                    </p>
                    <div class="mt-4">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Return to Home</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
