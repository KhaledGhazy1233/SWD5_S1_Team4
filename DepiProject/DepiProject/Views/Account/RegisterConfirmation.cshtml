@{
    ViewData["Title"] = "Register Confirmation";
}

<div class="container mt-5 pt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">Registration Successful</h4>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="bi bi-envelope-check" style="font-size: 3rem; color: #28a745;"></i>
                    </div>
                    <h5>Please confirm your email</h5>
                    <p class="mt-3">
                        A confirmation link has been sent to your email address.
                    </p>
                    <p>
                        Please check your email to confirm your account.
                    </p>
                    <div class="mt-4">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Return to Home</a>
                        <div class="mt-2">
                            <a asp-controller="Account" asp-action="ResendEmailConfirmation" asp-route-email="@ViewData["Email"]">Didn't receive the email? Click here to resend</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
