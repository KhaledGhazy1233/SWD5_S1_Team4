@model DepiProject.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Log in";
}

<link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />

<div class="container auth-form-container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card auth-form">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fas fa-sign-in-alt me-2"></i>Login to Your Account</h4>
                </div>
                <div class="card-body">
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group mb-4">
                            <label asp-for="Email" class="form-label">Email Address</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-4">
                            <label asp-for="Password" class="form-label">Password</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                <input asp-for="Password" class="form-control" placeholder="Enter your password" />
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-4">
                            <div class="form-check">
                                <input asp-for="RememberMe" class="form-check-input" />
                                <label asp-for="RememberMe" class="form-check-label">
                                    Remember me
                                </label>
                            </div>
                        </div>
                        <div class="d-grid gap-2 mb-4">
                            <button type="submit" class="btn btn-lg btn-primary">
                                <i class="fas fa-sign-in-alt me-2"></i>Log in
                            </button>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <a asp-action="ForgotPassword"><i class="fas fa-question-circle me-1"></i>Forgot your password?</a>
                            <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]"><i class="fas fa-user-plus me-1"></i>Register as a new user</a>
                        </div>
                        <div class="text-center">
                            @if (ViewData["ShowResendLink"] != null && (bool)ViewData["ShowResendLink"] == true)
                            {
                                <div class="alert alert-warning mt-3">
                                    <p>You must confirm your email before logging in.</p>
                                    <a asp-action="ResendEmailConfirmation" asp-route-email="@ViewData["Email"]" class="btn btn-warning btn-sm">
                                        <i class="fas fa-paper-plane me-1"></i>Resend confirmation email
                                    </a>
                                </div>
                            }
                            else
                            {
                                <a asp-action="ResendEmailConfirmation"><i class="fas fa-envelope me-1"></i>Need to confirm your email?</a>
                            }
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
