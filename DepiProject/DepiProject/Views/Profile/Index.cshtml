@{
    ViewData["Title"] = "Profile";
}

<section class="bg-light py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="card shadow">
                    <div class="card-header bg-success text-white">
                        <h3 class="mb-0">My Profile</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4 text-center mb-4">
                                <div class="mb-3">
                                    <img src="~/assets/img/profile-placeholder.jpg" alt="Profile"
                                        class="img-fluid rounded-circle"
                                        style="width: 200px; height: 200px; object-fit: cover;"
                                        onerror="this.src='https://via.placeholder.com/200';">
                                </div>
                                <button class="btn btn-outline-success">Change Photo</button>
                            </div>
                            <div class="col-md-8">
                                <div class="row mb-4">
                                    <div class="col-md-12">
                                        <h4>Personal Information</h4>
                                        <hr>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">First Name</label>
                                        <input type="text" class="form-control" value="John" readonly>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Last Name</label>
                                        <input type="text" class="form-control" value="Doe" readonly>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Email</label>
                                        <input type="email" class="form-control" value="john.doe@example.com" readonly>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">Phone</label>
                                        <input type="tel" class="form-control" value="+1 (555) 123-4567" readonly>
                                    </div>
                                    <div class="col-md-12 mb-3">
                                        <button class="btn btn-success">Edit Profile</button>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <h4>Address Information</h4>
                                        <hr>
                                    </div>
                                    <div class="col-md-12 mb-3">
                                        <label class="form-label">Street Address</label>
                                        <input type="text" class="form-control" value="123 Main Street" readonly>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label class="form-label">City</label>
                                        <input type="text" class="form-control" value="New York" readonly>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label class="form-label">State/Province</label>
                                        <input type="text" class="form-control" value="NY" readonly>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label class="form-label">Zip/Postal Code</label>
                                        <input type="text" class="form-control" value="10001" readonly>
                                    </div>
                                    <div class="col-md-12 mb-3">
                                        <button class="btn btn-success">Edit Address</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="card shadow">
                    <div class="card-header bg-success text-white">
                        <h3 class="mb-0">My Orders</h3>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Order #</th>
                                        <th>Date</th>
                                        <th>Items</th>
                                        <th>Total</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>ORD-2025-001</td>
                                        <td>May 3, 2025</td>
                                        <td>3 items</td>
                                        <td>$129.99</td>
                                        <td><span class="badge bg-success">Delivered</span></td>
                                        <td><button class="btn btn-sm btn-outline-success">View Details</button></td>
                                    </tr>
                                    <tr>
                                        <td>ORD-2025-002</td>
                                        <td>Apr 28, 2025</td>
                                        <td>1 item</td>
                                        <td>$79.99</td>
                                        <td><span class="badge bg-info">Shipped</span></td>
                                        <td><button class="btn btn-sm btn-outline-success">View Details</button></td>
                                    </tr>
                                    <tr>
                                        <td>ORD-2025-003</td>
                                        <td>Apr 15, 2025</td>
                                        <td>2 items</td>
                                        <td>$59.95</td>
                                        <td><span class="badge bg-secondary">Completed</span></td>
                                        <td><button class="btn btn-sm btn-outline-success">View Details</button></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="card-footer">
                        <a href="#" class="btn btn-outline-success">View All Orders</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>